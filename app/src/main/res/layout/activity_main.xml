<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btn_Ok_Dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ok PopUp"
            app:layout_constraintEnd_toEndOf="@id/btn_OkCancel_Dialog"
            app:layout_constraintStart_toStartOf="@id/btn_OkCancel_Dialog"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_OkCancel_Dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="OKCancel PopUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_Ok_Dialog" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_OkCancel_Dialog" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>